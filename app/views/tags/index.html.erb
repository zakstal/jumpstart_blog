<h1>All Tags</h1>

<ul id="articles">
  <% @tag.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), class: 'tag_title' %>
      <%= link_to "delete", tag_path(@tag),
              method: :delete, data: {confirm: "Really delete the tag?"}%>
    </li>
  <% end %>
  <%= link_to "Create a New tag", new_tag_path, class: "new_tag" %>
</ul>
